<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthorProfileActivity">

    <Button
        android:id="@+id/btnSaveAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="498dp" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        tools:layout_editor_absoluteX="242dp"
        tools:layout_editor_absoluteY="501dp" />

    <EditText
        android:id="@+id/editTextAgeMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberSigned"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="91dp" />

    <EditText
        android:id="@+id/editTextAgeMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberSigned"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="145dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="min age"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="119dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="max age"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="170dp" />

    <Spinner
        android:id="@+id/spGender"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="225dp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="226dp" />

    <CheckBox
        android:id="@+id/cbEnglish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="speaks english"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="273dp" />

    <CheckBox
        android:id="@+id/cbGerman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="speaks german"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="318dp" />

    <CheckBox
        android:id="@+id/cbSpanish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="speaks spanish"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="367dp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil-Anpassung"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="44dp" />

</androidx.constraintlayout.widget.ConstraintLayout>